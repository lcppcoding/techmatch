<div class="container my-5 pt-2">
  <div class="card">
    <div class="card-header">
      Account <%= link_to 'Edit Account', edit_user_registration_path, class: "ml-3" %>
    </div>
    <div class="card-body">
      <h5 class="card-title">Username</h5>
      <p class="card-text"><%= current_user.username %></p>
      <h5 class="card-title">Email</h5>
      <p class="card-text mb-4"><%= current_user.email %></p>
      <%= link_to 'Log Out', destroy_user_session_path, method: :delete, class: "mt-2" %>
    </div>
  </div>
</div>
