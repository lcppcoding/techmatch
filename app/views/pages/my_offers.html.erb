<div class="container h-100 my-4">
  <div class="header text-center p-3 rounded-3" style="background-color: #b7e4c7">
    <h1>My Offers</h1>
  </div>
  <ul class="list-group mb-4 pt-3">
    <% @offers.each do |offer| %>
      <div class="card mt-3">
        <div class="card-body">
          <div class="card-title border-bottom">
            <h2><%=link_to offer.title, offer_path(offer)%></h2>
          </div>
          <div class="desc mb-4">
            <p><strong>Offer description:</strong></p>
            <%= offer.description %>
          </div>
          <div class="price">
            <p><strong>Offer value:</strong></p>
            U$ <%= offer.price%>
          </div>
        </div>
      </div>
    <% end %>
  </ul>
  <% if policy(Offer).create? %>
    <%= link_to "Add Offer", new_offer_path(current_user), class: "btn btn-primary" %>
  <% end %>
</div>
