<div class="container">
  <ul class="list-group mb-4 pt-3">
    <div class="card mt-3">
      <div class="row">
        <div class="col-md-10">
          <div class="card-body">
            <div class="card-title">
              <h1><%= @user.username %></h1>
            </div>
            <p><%= @user.email %></p>
          </div>
        </div>
        <div class="col-md-2 d-flex align-items-center">
          <div class="photo">
            <%= image_tag @user.profile_picture, class: "avatar dropdown-toggle", style: "width: 75px"%>
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-3">
      <div class="card-body">
        <h4>Skills:</h4>
        <%= @user.skills %>
      </div>
    </div>
    <div class="card mt-3">
      <div class="card-body d-flex justify-content-between mt-3 pt-1">
        <div class="row d-flex align-items-center ml-1">
          <div class="title mr-5">
            <h4>Ratings:</h4>
          </div>
          <div class="contractor mr-4">
            Rating as Contractor: <div class="stars" style="--rating: <%= @user.contractor_rating_avg%>;"></div>
          </div>
          <div class="employer">
            Rating as Employer: <div class="stars" style="--rating: <%= @user.employer_rating_avg%>;"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="card mt-3">
      <div class="card-body">
        <div class="review pb-2">
          <h4>Reviews:</h4>
        </div>
        <div class="freelancer mb-4">
          <h6>As Freelancer:</h6>
          <% @user.jobs.each do |job| %>
            <% if job.contractor_review.nil? %>
              Not rated yet
            <% else %>
              <p>- <%= job.contractor_review %> | <strong>Employer:</strong><em> <%= job.offer.user.username %> </em></p>
            <% end %>
          <% end %>
        </div>
        <h6>As Employer:</h6>
        <% jobs = Job.all.select { |job| job.offer.user == @user } %>
        <% jobs.each do |job| %>
          <% if job.employer_review.nil? %>
            Not rated yet
          <% else %>
            <p>- <%= job.employer_review %> | <strong>Freelancer:</strong><em> <%= job.user.username %></em></p>
          <% end %>
        <% end %>
      </div>
    </div>

  </ul>
  <%= link_to 'Back', :back, class: "btn btn-primary" %>
</div>
