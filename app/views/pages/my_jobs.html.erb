<div class="container my-4">
  <h1>My jobs</h1>
  <ul class="list-group mb-4 pt-3">
    <% @jobs.each do |job| %>
      <div class="card-product mt-3">
        <div class="card-product-infos">
          <h4><%= job.offer.title %></h4>
          <p><strong>Freelancer:</strong><br> <!-- resolver link aqui pra perfil do freela -->
            <h4><%= link_to job.offer.title, job_path(job) %></h4>
            <%= job.user.username %>
          </p>
          <p><strong>Pre√ßo</strong></p>
          R$ <%= job.offer.price %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
