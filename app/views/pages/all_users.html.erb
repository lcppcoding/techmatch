<!-- search form -->
  <%= form_tag all_users_path, class: 'mt-3 container', method: :get do %>
  <div class = 'd-flex'>
    <%= text_field_tag :query, params[:query], class: "form-control", placeholder: "Find a freelancer based on skills you need to your project" %>
    <%= submit_tag "Search", class: "btn btn-primary ml-2" %>
  </div>
  <% end %>


<!-- the list of freelances -->

<div class="container my-4">
  <h1>Freelancers profiles</h1>
  <ul class="list-group mb-4 pt-3">
    <% @users.each do |user| %>
      <div class="card-product pl-3 mt-3">
        <%= image_tag user.profile_picture, class: "avatar-square" %>
        <div class="card-product-infos">
          <h3 id='name-card'><%= link_to user.username, show_user_path(user), style: "text-decoration: none;" %></h3>
          <p><%= user.email %></p>
          <p><strong>Skills:</strong><br>
            <%=user.skills%>
          </p>
          <p><strong>Profile Summary:</strong></p>
          <%= user.profile_summary%>
          <p><strong>Contractor Rating:</strong></p>
          <%= user.contractor_rating_avg %><i class="fas fa-star ml-1" , style="color: #FDCC0D;"></i>
          <p><strong>Employer Rating:</strong></p>
          <%= user.employer_rating_avg %><i class="fas fa-star ml-1" , style="color: #FDCC0D;"></i>
        </div>
      </div>
    <% end %>
  </ul>
</div>
