<div class="container my-4">
  <h1>Freelancers profiles</h1>
  <ul class="list-group mb-4 pt-3">
    <% @users.each do |user| %>
      <div class="card-product pl-3 mt-3">
        <img class="avatar-square" alt="avatar-square" src="https://source.unsplash.com/user/erondu" />
        <div class="card-product-infos">
          <h3><%= link_to user.username, show_user_path(user), style: "text-decoration: none;" %></h3>
          <p><strong>Skills:</strong><br>
            <%=user.skills%>
          </p>
          <p><strong>Profile Summary:</strong></p>
          <%= user.profile_summary%>
        </div>
      </div>
    <% end %>
  </ul>
</div>
