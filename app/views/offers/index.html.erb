<div class="container my-4">
  <h1>You are on the Offers index page</h1>
  <ul class="list-group mb-4 pt-3">
    <% @offers.each do |offer| %>
      <li class="list-group-item mb-2"><%= link_to offer.title, offer_path(offer) %></li>
    <% end %>
  </ul>
  <% if policy(Offer).create? %>
    <%= link_to "Add Offer", new_offer_path(current_user), class: "btn btn-primary" %>
  <% end %>
</div>
