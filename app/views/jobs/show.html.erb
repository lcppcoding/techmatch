<div class="container my-5">
  <div class="row">
    <h1>Job Details</h1>
    <p><%= link_to 'Back', :back, class: "btn btn-primary ml-4" %></p>
  </div>
  <ul class="list-group mb-4 pt-3">
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h1><%= @job.offer.title %></h1>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Job description </h2>
        <br>
        <%= @job.offer.description  %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2>Freelancer</h2>
        <br>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Price </h2>
        <br>
        U$ <%= @job.offer.price  %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Start Date </h2>
        <br>
         <%= @job.start_date %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <br>
        <%= link_to @job.done? ? 'Job is done, click here to add/edit a review' : 'Mark job as finished',
            edit_job_path(@job), class: "btn btn-primary" %>
      </div>
    </div>
    </div>
  </ul>
</div>

