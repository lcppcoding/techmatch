<h1>Job Details</h1>
<div class="container">
  <ul class="list-group mb-4 pt-3">
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h1><%= @job.offer.title %></h1>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Descrição da Job </h2>
        <br>
        <%= @job.offer.description  %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2><%= link_to 'Freelancer', show_user_path(@job.user) %> </h2>
        <br>
         <%= @job.user.username %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Preço </h2>
        <br>
        R$ <%= @job.offer.price  %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Data de início </h2>
        <br>
         <%= @job.start_date %>
      </div>
    </div>
    <div class="card-profile mt-3">
      <div class="card-profile-infos">
        <h2> Finalizou o Trabalho? </h2>
        <br>
         <%= @job.job_done? %> <!-- criar dropdown e rota aqui mandar p/ a tela e avisar ao usuário que se ele -->
         <%= link_to 'Submeter Review', offers_path, class: "btn btn-primary" %>
      </div>
    </div>
    </div>
  </ul>
  <%= link_to 'Review', review_employer_job_path(@job)%>
  <%= link_to 'Back', jobs_path, class: "btn btn-primary" %>
</div>

