<div class="container h-100 my-4">
  <div class="header text-center p-3 rounded-3" style="background-color: #b7e4c7">
    <h1>My Jobs</h1>
  </div>
  <ul class="list-group mb-4 pt-3">
    <% @jobs.each do |job| %>
      <div class="card mt-3">
        <div class="card-body">
          <h3><%= link_to job.offer.title, job_path(job) %></h3>
          <h5><strong class="mr-1">Employer:</strong><%= job.offer.user.username.capitalize %></h5>
          <h5><strong class="mr-1">Freelancer:</strong><%= job.user.username.capitalize %></h5>
          <p><strong>Pre√ßo</strong></p>
          R$ <%= job.offer.price %>
        </div>
      </div>
    <% end %>
  </ul>
</div>
